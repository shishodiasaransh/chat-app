<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Chatt the sheet</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body class="border border-bottom border-success ">
    <span><h1 class="text-center text-success shadow-lg"><b>Chatting</b></h1></span>
    <div class="container shadow-lg">
      <input type="text"
      class="border shadow-lg border-danger text-center" id="message" placeholder="Enter your message">
      <button id="send">Send</button>
      <h3><div class="shadow-lg text-center">Your Messages</div></h3>
      <div class="border border-success  mt-4 mb-4 p-5 text-danger shadow-lg text-center " id="messages"></div>
    </div>
    
    
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();
      const send= document.getElementById("send")
      const mess= document.getElementById("message")
      const allMessages=document.getElementById('messages')

      socket.on('message',(message)=>{
        const p=document.createElement('p')
        p.innerText = message
        allMessages.appendChild(p)
      })

      send.addEventListener('click',(e)=>{
        const message = mess.value
        console.log(message)
        socket.emit('message',message);
      })
    </script>





    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
